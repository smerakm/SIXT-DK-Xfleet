<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Max_Period_Length</fullName>
    <active>true</active>
    <description>max period length because of Damage and Service data is defined only for 36 months</description>
    <errorConditionFormula>Period__c &gt; 36</errorConditionFormula>
    <errorDisplayField>Period__c</errorDisplayField>
    <errorMessage>Max period length is 36 months</errorMessage>
</ValidationRule>

<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>54.0</apiVersion>
    <decisions>
        <description>if Batch is already in Deal status then set the Vehicle status automatically to Infleet</description>
        <name>Is_Batch_already_a_DEAL</name>
        <label>Is Batch already a DEAL</label>
        <locationX>182</locationX>
        <locationY>551</locationY>
        <defaultConnectorLabel>not yet</defaultConnectorLabel>
        <rules>
            <name>batchIsDeal</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Vehicle_Batch__r.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Deal</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_status_to_Infleet</targetReference>
            </connector>
            <label>Deal</label>
        </rules>
    </decisions>
    <description>automatic updates when vehicle is created</description>
